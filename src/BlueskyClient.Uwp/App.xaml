<Application
    x:Class="BlueskyClient.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlueskyClient"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls">
    <Application.Resources>
        <winui:XamlControlsResources>
            <winui:XamlControlsResources.MergedDictionaries>
                <ResourceDictionary>
                    <ResourceDictionary.ThemeDictionaries>
                        <ResourceDictionary x:Key="Light">
                            <SolidColorBrush x:Key="DefaultPageBackgroundBrush" Color="#f8f8f8" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="Dark">
                            <SolidColorBrush x:Key="DefaultPageBackgroundBrush" Color="#121212" />
                        </ResourceDictionary>
                        <ResourceDictionary x:Key="HighContrast">
                            <StaticResource x:Key="DefaultPageBackgroundBrush" ResourceKey="SystemColorWindowColor" />
                        </ResourceDictionary>
                    </ResourceDictionary.ThemeDictionaries>

                    <FontFamily x:Key="FluentUIGlyphs">/Assets/fluentui.ttf#Segoe Fluent Icons</FontFamily>
                    <x:String x:Key="GlyphEarth">&#xE128;</x:String>
                    <x:String x:Key="GlyphRepost">&#xE8EE;</x:String>
                    <x:String x:Key="GlyphMessage">&#xE8BD;</x:String>
                    <x:String x:Key="GlyphLike">&#xEB51;</x:String>
                    <x:String x:Key="GlyphLikeFilled">&#xEB52;</x:String>
                    <x:String x:Key="GlyphThreeDots">&#xE712;</x:String>
                    <x:String x:Key="GlyphNewPost">&#xE929;</x:String>
                    <x:String x:Key="GlyphReply">&#xE97A;</x:String>
                    <x:String x:Key="GlyphAddUser">&#xE8FA;</x:String>
                    <x:String x:Key="GlyphBack">&#xE72B;</x:String>
                    <x:String x:Key="GlyphForward">&#xE72A;</x:String>
                    <x:String x:Key="GlyphUser">&#xE77B;</x:String>
                    <x:String x:Key="GlyphStarterPack">&#xF133;</x:String>
                    <x:String x:Key="GlyphSignOut">&#xF3B1;</x:String>
                    <x:String x:Key="GlyphPhoto">&#xE91B;</x:String>
                    <x:String x:Key="GlyphFeeds">&#xF57F;</x:String>
                    <x:String x:Key="GlyphPinned">&#xE840;</x:String>
                    <x:String x:Key="GlyphPinnedFillOverlay">&#xE842;</x:String>
                    <x:String x:Key="GlyphRefresh">&#xE72C;</x:String>
                    <x:String x:Key="GlyphSearch">&#xE721;</x:String>
                    <x:String x:Key="GlyphDelete">&#xE74D;</x:String>
                    <x:String x:Key="GlyphHistory">&#xE81C;</x:String>
                    <x:String x:Key="GlyphCloseThick">&#xEF2C;</x:String>
                    <x:String x:Key="GlyphClose">&#xE653;</x:String>
                    <x:String x:Key="GlyphCloseThin">&#xE894;</x:String>
                    <x:String x:Key="GlyphCheckMark">&#xE73E;</x:String>

                    <x:Double x:Key="FeedMaxWidth">600</x:Double>
                    <x:Double x:Key="SearchHeaderMaxWidth">640</x:Double>

                    <Style
                        x:Key="SquareSmallHyperlinkButton"
                        BasedOn="{StaticResource DefaultHyperlinkButtonStyle}"
                        TargetType="HyperlinkButton">
                        <Setter Property="Width" Value="32" />
                        <Setter Property="Height" Value="32" />
                        <Setter Property="Padding" Value="0" />
                    </Style>
                </ResourceDictionary>
            </winui:XamlControlsResources.MergedDictionaries>
        </winui:XamlControlsResources>
    </Application.Resources>
</Application>
